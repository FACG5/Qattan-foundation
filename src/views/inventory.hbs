<section>
  <h2 class="page-title">الأدوات/الأجهزة</h2>
 
   {{!--      Taps     --}}
<div class="tabset">
  <!-- Tab 1 -->
  <input type="radio" name="tabset" id="tab1" aria-controls="view" checked>
  <label for="tab1">عرض الأجهزة</label>
  <!-- Tab 2 -->
  <input type="radio" name="tabset" id="tab2" aria-controls="add">
  <label for="tab2">إضافة جهاز </label>
  <!-- Tab 3 -->
  <input type="radio" name="tabset" id="tab3" aria-controls="veiw-repaird">
  <label for="tab3">  عرض ما تم إصلاحه </label>
   <div class="tab-panels">
    <section id="view" class="tab-panel">
       <div class="viewAll">
    {{#each inventories}}
      <div class="data">
        <h5>رقم الجهاز : </h5>
        <h6>Inventory id {{this.id}}</h6>
      </div>
      {{#if this.ass_no}}
      <div class="data">
        <h5> الرقم التسلسلي للتسجيل:  </h5>
        <h6>assign number {{this.ass_no}}</h6>
      </div>
      {{/if}}
      {{#if this.inventory_id}}
      <div class="data">
        <h5> الرقم الخاص  :  </h5>
        <h6>ID{{this.inventory_id}}</h6>
      </div>
      {{/if}}
      {{#if this.device}}
      <div class="data">
        <h5>  نوع الجهـاز   :  </h5>
       <h6>Device Type {{this.device}}</h6>
      </div>
      {{/if}}
      {{#if this.name}}
       <div class="data">
        <h5>  اسـم الجهـاز   :  </h5>
        <h6>Name{{this.name}}</h6>
      </div>
      {{/if}}
      {{#if this.brand}}
       <div class="data">
        <h5>  برانـد الجهـاز   :  </h5>
        <h6>Device Brand{{this.brand}}</h6>
      </div>
      {{/if}}
      {{#if this.description}}
       <div class="data">
        <h5>   الوصـف   :  </h5>
        <h6>Discription{{this.description}}</h6>
      </div>
      {{/if}}
      {{#if this.cdkey}}
       <div class="data">
        <h5>   مفتاح (CD)   :  </h5>
        <h6>CD Key{{this.cdkey}}</h6>
      </div>
      {{/if}}
      {{#if this.employee}}
       <div class="data">
        <h5>    الموظــف :  </h5>
        <h6>employee (owner){{this.employee}}</h6>
      </div>
      {{/if}}
      {{#if this.place}}
       <div class="data">
        <h5>    المـكان :  </h5>
         <h6>Place{{this.place}}</h6>
      </div>
      {{/if}}
      {{#if this.vendor}}
       <div class="data">
        <h5>    المـزود :  </h5>
        <h6>vendor{{this.vendor}}</h6>
      </div>
      {{/if}}
      {{#if this.price_usd}}
      <div class="data">
        <h5>    السـعر (USD):  </h5>
        <h6>Price{{this.price_usd}}</h6>
      </div>
      {{/if}}
      {{#if this.price_nis}}
       <div class="data">
        <h5>     السـعر (NIS):  </h5>
         <h6>Price/NIS{{this.price_nis}}</h6>
      </div>
      {{/if}}
      {{#if this.purchase_date}}
       <div class="data">
        <h5>     تاريـخ الشـراء  </h5>
         <h6>purchase date{{this.purchase_date}}</h6>
      </div>
      {{/if}}
      {{#if this.warranty}}
       <div class="data">
        <h5> الصـلاحية  </h5>
          <h6>warranty{{this.warranty}}</h6>
      </div>
      {{/if}}
      {{#if this.serial_no}}
        <div class="data">
        <h5> الرقم التسلسلي المعتمد  </h5>
           <h6>Serial Number{{this.serial_no}}</h6>
      </div>
      {{/if}}
      {{#if this.processor}}
        <div class="data">
        <h5>   المعالج :  </h5>
            <h6>processor{{this.processor}}</h6>
      </div>
      {{/if}}
      {{#if this.ram}}
        <div class="data">
        <h5>   الذاكـرة :  </h5>
           <h6>Ram{{this.ram}}</h6>
      </div>
      {{/if}}
      {{#if this.hd1}}
       <div class="data">
        <h5>   القرص رقم واحد  :  </h5>
          <h6>hd1{{this.hd1}}</h6>
      </div>
      {{/if}}
      {{#if this.hd2}}
      <div class="data">
        <h5>   القرص رقم اثنين  :  </h5>
          <h6>hd2{{this.hd2}}</h6>
      </div>
      {{/if}}
      {{#if this.notes}}
       <div class="data">
        <h5>  ملاحظــات   :  </h5>
            <h6>notes{{this.notes}}</h6>
      </div>
      {{/if}}
      {{#if this.netport}}
       <div class="data">
        <h5>  الانترنت Port   :  </h5>
           <h6>netport{{this.netport}}</h6>
      </div>
      {{/if}}
      {{#if this.status}}
       <div class="data">
        <h5>    الحالـة  :  </h5>
            <h6>status{{this.status}}</h6>
      </div>
      {{/if }}
      <div class="action-btn">
       <button type="button" name="button"> <a href="/updateInventoryPage/{{this.id}}"><i class="fas fa-edit"></i></a> </button>
        <button type="button" name="button" class="deleteInventoryButton" id="{{this.id}}"><i class="fas fa-trash-alt"></i></button>
      </div>

    {{/each}}
    </div>
    </section>
      <section id="add" class="tab-panel">
         <div class="">
    <h1>أدخل البيانات </h1>

    <div class="form">
      <label for="id">ID</label>
      <input type="number" name="id" value="1" placeholder="ID" class="inventoryId">
    </div>

    <div class="form">
      <label for="device">Device</label>
      <select class="device">
    {{#each devices}}
    <option value="{{this.device}}">{{this.device}}</option>
    {{/each}}
  </select>
    </div>

    <div class="form">
      <label for="name">Name</label>
      <input type="text" name="name" value="" placeholder="Name" class="name">
    </div>

    <div class="form">
      <label for="brand">Brand</label>
      <select class="brand">
    {{#each brands}}
    <option value="{{this.brand}}">{{this.brand}}</option>
    {{/each}}
  </select>
    </div>

    <div class="form">
      <label for="description">description</label>
      <input type="text" name="description" value="" placeholder="description" class="description">
    </div>


    <div class="form">
      <label for="cdkey">CD Key</label>
      <input type="text" name="cdkey" value="" placeholder="CDKey" class="cdkey">
    </div>

    <div class="form">
      <label for="employee">employee</label>
      <select class="employee">
    {{#each employees}}
    <option value="{{this.name}}">{{this.name}}</option>
    {{/each}}
  </select>
    </div>

    <div class="form">
      <label for="place">place</label>
      <select class="place">
    {{#each places}}
    <option value="{{this.place}}">{{this.place}}</option>
    {{/each}}
  </select>
    </div>

    <div class="form">
      <label for="vendor">vendor</label>
      <select class="vendor">
    {{#each vendors}}
    <option value="{{this.vendor}}">{{this.vendor}}</option>
    {{/each}}
  </select>
    </div>

    <div class="form">
      <label for="priceUsd">priceUsd</label>
      <input type="number" name="priceUsd" value="1" placeholder="priceUsd" class="priceUsd">
    </div>

    <div class="form">
      <label for="priceNis">priceNis</label>
      <input type="number" name="priceNis" value="1" placeholder="priceNis" class="priceNis">
    </div>

    <div class="form">
      <label for="purchaseDate">purchaseDate</label>
      <input type="date" name="" value="" class="purchaseDate" default="">
    </div>

    <div class="form">
      <label for="warranty">warranty</label>
      <input type="number" name="" value="1" placeholder="warranty" class="warranty">
    </div>

    <div class="form">
      <label for="SerialNo">Serial No</label>
      <input type="text" name="" value="" placeholder="Serial No" class="serialNo">
    </div>

    <div class="form">
      <label for="processor">processor</label>
      <input type="text" name="" value="" placeholder="processor" class="processor">
    </div>

    <div class="form">
      <label for="ram">ram</label>
      <input type="text" name="" value="" placeholder="ram" class="ram">
    </div>

    <div class="form">
      <label for="hd1">hd1</label>
      <input type="number" name="" value="1" placeholder="hd1" class="hd1">
    </div>

    <div class="form">
      <label for="hd2">hd2</label>
      <input type="number" name="" value="1" placeholder="hd2" class="hd2">
    </div>

    <div class="form">
      <label for="notes">notes</label>
      <input type="text" name="" value="" placeholder="Note" class="notes">
    </div>

    <div class="form">
      <label for="netport">netport</label>
      <input type="text" name="" value="" placeholder="netport" class="netport">
    </div>

    <div class="form">
      <label for="status">status</label>
      <input type="number" name="" value="1" placeholder="status" class="status" min="0" max="1">
    </div>


    <button type="submit" name="button" class="addInventButton"> إضافة</button>

  </div>
    </section>

      <section id="veiw-repaird" class="tab-panel">
 <div class="viewRepair">
    {{#each repaired}}
     <div class="data">
        <h5>رقم التصليح : </h5>
          <h6>{{this.id}}</h6>
      </div>
      <div class="data">
        <h5>رقم الجهاز :  </h5>
         <h6>{{this.no}}</h6>
      </div>
       <div class="data">
        <h5> التاريخ :  </h5>
         <h6> {{this.date}}</h6>
      </div>
      {{#if this.type}}
       <div class="data">
        <h5> نوع التصليح :  </h5>
        <h6>{{this.type}}</h6>
      </div>
      {{/if}}

      {{#if this.action}}
       <div class="data">
        <h5> الإجراءالمتبع :  </h5>
        <h6>{{this.action}}</h6>
      </div>
      {{/if}}
      {{#if this.part}}
      <div class="data">
        <h5> الجزء المضاف (إن وجد)  :  </h5>
        <h6>{{this.part}}</h6>
      </div>
      {{/if}}
      {{#if this.description}}
       <div class="data">
        <h5>الوصف:  </h5>
        <h6>{{this.description}}</h6>
      </div>
        <h6> </h6>
      {{/if}}
      <hr>
{{/each}}
  </div>
    </section>
 
  <!-- ******************************* VIEW Repaired Inventries******************************* -->
 

</section>
