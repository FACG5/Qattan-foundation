<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    {{>head}}
</head>
        {{#if manager}}
            <body>
                {{>headerManager}}
                <main>
                    {{>sidebarManager}}
                    {{{body}}}
                </main>
                {{>footer}}
            </body>
        {{else}}
         <body>
            {{#if headerFound}}
                {{>header}}
            {{/if}}
            <main>
                {{{body}}}
            </main>
            {{#if footerFound}}
                 {{>footer}}
            {{/if}}
        </body>
        {{/if}}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    {{#if dom}}
        <script src="/js/{{dom}}.js"></script>
    {{/if}}

   {{#if script}}
    <script src="/js/{{script}}.js"></script>
    {{/if}}

</html>
