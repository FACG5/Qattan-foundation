    </div>

    <div class="period-section">
        <div class="ticket-view">
            <h3>أدخل المدة المطلوبة : </h3>
            <div class="form">
                <div class="min">
                    <label for="min-date">أدنى تاريخ  : </label>
                    <input type="date" name="min-date" id="min-date">
                </div>
                 <div class="min">
                     <label for="max-date">أعلى تاريخ : </label>
                    <input type="date" name="max-date" id="max-date">
                </div>
                <button type="submit" id="btn-period" class="btn" >أخرج التقرير </button>
            </div>
            <p class="error"></p>
            <div class="period-result">
                <table class="viewTable">
                    <thead>
                        <th>رقم البطاقة </th>
                        <th>تاريخ الطلب </th>
                        <th>اسم الموظف </th>
                        <th>عنوان الطلب</th>
                        <th>وصف للطلب</th>
                        <th>الحالة </th>
                        <th>النوع</th>
                        <th> المشكلة </th>
                         <th>موظف اﻹدارة  / قسم IT</th>
                        <th>المدة </th>
                    </thead>
                    <tbody class="ticket-list">
                    </tbody>
                </table>
            </div>
        </div>
    </div>




