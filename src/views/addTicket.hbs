 <section class="employee-section">
<div class="title">
    <h2 class="greet">طلباتـــــك </h2>
</div>
    <div class="tabs">
        <button class="tab-btn"  onclick="openTab(event, 'done')"> 
        طلب استعارة</button>
        <button class="tab-btn" onclick="openTab(event, 'undone')">الدعم الفني</button>
    </div>
    <!-- borrow -->
    <div  id="done" class="content"> 
        <h2 class="title"> استعارة</h2>
                <div class="form">
                <label for="ptype"> Problem Type</label>
                    <select id="ptype" name="ptype" class="type">
                        <option selected value="Hardware">Hardware</option>
                         <option disabled value="Software">Software</option>
                        <option disabled value="M2L">M2L</option>
                        <option disabled value="Internet">Internet</option>
                        <option disabled value="Lan">Lan</option>
                         <option disabled value="Customer DB">Customer DB</option>
                    </select>
                </div>
                <div class="form">
                    <label for="text">Subject</label>
                    <input id="subject" type="text" placeholder="Subject">
                </div>
                <div class="form">
                    <label for="type">Type</label>
                        <select id="type" name="type" class="type">
                                <option selected value="loan">Loan</option>
                                <option disabled value="support">Support</option>
                            </select>
                </div>
                <div class="form">
                    <label for="priority">priority</label>
                        <select id="priority" name="priority" class="type">
                                <option value="medium">Medium</option>
                                <option  value="high">High</option> 
                                <option  value="low">Low</option>
                            </select>
                </div>
                <div class="form">
                    <label for="duration">duration</label>
                    <input  id="duration" type="number"  value ="1" id="duration" placeholder="duration">
                </div>
                <div class="form">
                    <label for="pdesc">problem Description</label>
                    <textarea id="pdesc" name="pdesc" placeholder="problem desc"></textarea>
                </div>

                <p class="msg"></p>
                <p class="error"></p>
                    <button id="btn-add" class="tab-btn">تقديم</button>
                    </div>





    <!-- tech.support -->






    <div id="undone" class="content">
           <h2 class="title"> دعم فني</h2>
                <div class="form">
                <label for="ptype-support"> Problem Type</label>
                    <select id="ptype-support" name="ptype" class="type">
                        <option value="Hardware">Hardware</option>
                        <option value="Software">Software</option>
                        <option value="M2L">M2L</option>
                        <option value="Internet">Internet</option>
                        <option value="Lan">Lan</option>
                         <option value="Customer DB">Customer DB</option>
                    </select>
                </div>
                <div class="form">
                    <label for="subject-support">Subject</label>
                    <input id="subject-support" type="text" placeholder="Subject">
                </div>
                <div class="form">
                    <label for="type-support">Type</label>
                        <select id="type-support" name="type" class="type">
                                <option selected value="support">Support</option>
                                 <option disabled value="loan">Loan</option>
                            </select>
                </div>
                <div class="form">
                    <label for="priority-support">priority</label>
                        <select id="priority-support" name="priority" class="type">
                                <option value="medium">Medium</option>
                                <option  value="high">High</option> 
                                <option  value="low">Low</option>
                            </select>
                </div>
                <div class="form">
                    <label for="duration-support">duration</label>
                    <input  id="duration-support" type="number"  value ="1" placeholder="duration">
                </div>
                <div class="form">
                    <label for="pdesc-support">problem Description</label>
                    <textarea id="pdesc-support" name="pdesc" placeholder="problem desc"></textarea>
                </div>

                <p class="msg-support"></p>
                <p class="error-support"></p>
                    <button id="btn-add-support" class="tab-btn">تقديم</button>
                    </div>

    </div>
